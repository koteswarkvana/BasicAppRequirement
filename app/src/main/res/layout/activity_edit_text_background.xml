<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.EditTextBackgroundActivity">

    <com.example.basicapprequire.customfontforviews.HelveticaEditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edittext_rounded_corners_color"
        android:gravity="center"
        android:hint="Enter your name" />

    <!--Added different types of folder names and placed dimens.xml file in all folders-->
    <!--NOTE: These folder paste on res folder-->
    <!--custom text view for different screen sizes-->
    <com.example.basicapprequire.customfontforviews.HelveticaTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Hello World"
        android:textSize="@dimen/default_button_text_size" />
</LinearLayout>